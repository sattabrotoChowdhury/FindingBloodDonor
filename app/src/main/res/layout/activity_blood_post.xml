<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.BloodPostActivity">

    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="70dp"
        tools:ignore="UselessLeaf,UselessParent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_back"
                tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded" />

            <TextView
                android:id="@+id/post_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="19sp"
                android:padding="5dp"
                android:text=" Create Post "
                android:background="@drawable/create_post_back"
                android:textAllCaps="false"
                android:textColor="#403E3E"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </RelativeLayout>



    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/liner_layout"
        android:id="@+id/blood_post_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
